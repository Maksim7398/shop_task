<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="Maksim 7398" id="005-create-table-news">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="news"/>
            </not>
        </preConditions>
        <createTable tableName="news">
            <column name="id" type="UUID" remarks="it`s news id">
                <constraints nullable="false" primaryKey="true" primaryKeyName="news_pkey"/>
            </column>
            <column name="title" type="VARCHAR(255)" remarks="title for news"/>
            <column name="description" type="VARCHAR(1000)" remarks="description or news"/>
            <column name="create_date" type="TIMESTAMP WITHOUT TIME ZONE" remarks="create date of order"/>
        </createTable>

    </changeSet>
</databaseChangeLog>